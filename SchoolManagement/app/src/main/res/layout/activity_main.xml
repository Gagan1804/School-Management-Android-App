<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backw">

    <Button
        android:id="@+id/admin"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/teacher"
        android:layout_marginEnd="35dp"
        android:background="@drawable/button1"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Admin"
        android:textColor="#022e76"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/teacher"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="261dp"
        android:layout_marginStart="34dp"
        android:background="@drawable/button1"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Teacher"
        android:textColor="#022e76"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/student"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/admin"
        android:layout_alignTop="@+id/parent"
        android:background="@drawable/button1"

        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Student"
        android:textColor="#022e76"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="435dp" />

    <Button
        android:id="@+id/parent"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/teacher"
        android:layout_marginBottom="189dp"
        android:background="@drawable/button1"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"

        android:shadowRadius="5"
        android:text="Parent"
        android:textColor="#022e76"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="435dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="163dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="304dp"
        android:text="Login As"
        android:textAlignment="center"
        android:textColor="#022e76"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="128dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@drawable/button2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="About Us"
        android:textColor="#f7f7f9"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.476" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@drawable/royal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="298dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:text="Dream, Believe, Achieve !"
        android:textColor="#022e76"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="537dp" />

</RelativeLayout>